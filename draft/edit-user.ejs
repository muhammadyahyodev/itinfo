<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
</html>
<body>
  <%- include('./partials/nav.ejs') %>
  <h1>Change User</h1>
  <form action="/edit/<%= user.id %>?_method=PUT" method="post" id="post-form">
    <label for="name">Name</label>
    <input
      type="text"
      name="name"
      id="name"
      value="<%= user.name %>"
    /><br /><br />
    <label for="username">User name</label>
    <input
      type="text"
      name="username"
      id="username"
      value="<%= user.username %>"
    /><br /><br />
    <label for="email" value="<%= user.name %>">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      value="<%= user.email %>"
    /><br /><br />
    <label for="phone" value="<%= user.name %>">Phone</label>
    <input
      type="tel"
      name="phone"
      id="phone"
      value="<%= user.phone %>"
    /><br /><br />
    <button type="submit">Submit</button>
  </form>
</body>
