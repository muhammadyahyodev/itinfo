{{#if topics}}
  <div class="row">
    {{#each topics}}
      <div class="col-lg-4 col-md-2">
        <div class="card mb-3">
          <div class="card" style="width: 100%;">
            <div class="card-body">
              <h5 class="card-title">{{topic_title}}</h5>
              {{! <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> }}
              <p class="card-text">
                {{topic_text}}
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde
                rem distinctio consequatur repudiandae inventore totam officia
                autem accusamus blanditiis? Voluptate quae consectetur nam unde
                ab expedita dignissimos, aperiam ipsa quo?</p>
              <div>
                <p><b>Updated: </b> {{updatedAt}}</p>
              </div>
              <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{#else}}
    <h5>Not data in this category</h5>
  {{/else}}
{{/if}}